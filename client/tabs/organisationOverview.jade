template(name="organisationOverview")
  img.ui.image.fluid(src="#{banner}")
  .ui.tiny.statistics
    .statistic
      .value #{totalMangos}
      .label Mangos
    .statistic
      .value #{transactionsCount}
      .label Transactions
    .statistic
      .value #{messageCount}
      .label Messages

  .ui.divider
  h3(style="font-weight: 300; margin-top: 0.5em") #{description}

  .ui.divider
  .ui.feed
    each transactions
      .event
        .label
          img(src='#{sender.profile.picture}')
        .content
          .summary #{sender.username} transfered #{mangos} Mangos to #{receiver.name}
            .date #{createdat}
          .exta.text #{message}
