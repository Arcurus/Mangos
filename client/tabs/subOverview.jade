template(name="subOverview")
  .ui.ten.cards(style="padding: 1em 2em 0.5em 2em")
    each shares
      a(href="/people/#{createdBy._id}").card
        if createdBy.profile.picture
          .image
            img(src="#{createdBy.profile.picture}")
        else
          .image
            img(src="/card.png")


  .ui.divider
  h3(style="font-weight: 300; margin-top: 0.5em; padding: 0.5em 2em") #{description}

  .ui.divider
  .ui.tiny.statistics(style="padding: 0.5em 2em")
    .statistic
      .value #{peopleCount}
      .label Contributors
    .statistic
      .value #{transactionsCount}
      .label Transactions
    .statistic
      .value #{actionsCount}
      .label Actions
    .statistic
      .value #{messageCount}
      .label Messages
    .statistic
      .value #{totalMangos}
      .label Mangos received
    .statistic
      .value #{totalTime}
      .label Minutes invested
  .ui.divider
  .ui.feed(style="padding: 1em 3em")
    each transactions
      .event
        .label
          a(href="/people/#{sender._id}")
            img(src='#{sender.profile.picture}')
        .content
          .date #{createdAt}
          .summary
            a(href="/people/#{sender._id}") #{sender.username}
            | has given #{mangos} Mangos to
            a(href="/people/#{receiver._id}") #{receiver.username}
          .exta.text #{message}
