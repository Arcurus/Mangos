template(name='transactions')
  h3 Transactions
  form.addTransaction#transfer
    input(type="text", name="amount", placeholder="amount")
    +inputAutocomplete(settings=settings id="receiver" name="receiver" placeholder="Select Person" required='')
    input(type="submit", name="Transfer")

  .ui.feed
    each transactions
      .event
        .label
          img(src='/logo.png')
        .content
          .date #{createdAt}
          .summery
            if username
              | #{username} transferred #{amount} to #{receiver}
            else
              | #{_id} transferred #{amount} to #{receiver}

template(name='standardLegends')
  | #{profile.name} #{_id}
